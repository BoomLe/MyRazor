@page "/Admin/Delete-role/{roleid}/"
@model App.Admin.Roles.DeleteModel
@{
    ViewData["Title"] = "Cập nhật Role";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>


<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
        <p>Bạn có chắc xóa <strong>@Model.role.Name</strong></p>
            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-primary">Danh sách Roles</a>
            </div>
        </form>
    </div>
</div>
