@page "/admin/set-member-AddRole/{id}"
@model App.Admin.User.AddRoleModel
@{
    ViewData["Title"] = "Thiết lập gán Role";
    
}

<h3>Thiết lâp Role : @Model.user.UserName</h3>
<partial name="_StatusMessage" for="@Model.StatusMessage"></partial>

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
              @Html.ListBoxFor(m => m.RoleName, @Model.allRoles, new
              {
                @* @class = "form-control", *@
                id = "SelectRole",
                @class = "w-100"
              })
                    <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
         
            <button type="submit" class="w-30 btn btn-lg btn-primary">Cập nhật</button>
            <a asp-page="./Index" class="w-30 btn btn-lg btn-primary">Danh sách thành viên</a>
        </form>
        <hr>
        <p>Các Claim của User :</p>
        @if(@Model.ClaimInRole.Count > 0)
        {
            <ul>
                @foreach (var claims in @Model.ClaimInRole)
                {
                    <li>@claims.ClaimType : @claims.ClaimValue</li>
                    
                }
            </ul>
        }
         <hr>
        <p>Các Claim riêng User :</p>
        <a asp-page="./EditUserClaim" asp-page-handler="AddClaim" asp-route-userid="@Model.user.Id" >+ Thêm claim riêng</a>
        @if(@Model.ClamInUser.Count > 0)
        {
            <u>
                @foreach (var claims in @Model.ClamInUser)
                {
                    <li>
                        <a asp-page="./EditUserClaim" asp-page-handler="EditClaim" asp-route-claimid="@claims.Id">
                            @claims.ClaimType : @claims.ClaimValue
                        </a>
                    </li>
                    
                }
            </u>
        }
    </div>
</div>
@section Scripts {
    <script src = "~/lib/multiple-select/multiple-select.min.js"> </script>

    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css">
    <script>
        $("#SelectRole").multipleSelect({selectAll : false,
        isOpen: false,
        keepOpen : false,
        });

    </script>
    <partial name="_ValidationScriptsPartial" />
}
