@page
@model IndexModel
@{
    ViewData["Title"] = "Thông tin";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="làm ơn nhập tên tài khoản." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="làm ơn nhập số điện thoại."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.HomeAddrss" class="form-control" placeholder="Làm ơn nhập địa chỉ."/>
                <label asp-for="Input.HomeAddrss" class="form-label"></label>
                <span asp-validation-for="Input.HomeAddrss" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.BrithDate" class="form-control" placeholder="Làm ơn nhập ngày sinh."/>
                <label asp-for="Input.BrithDate" class="form-label"></label>
                <span asp-validation-for="Input.BrithDate" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Lưu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
