@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore;
@using EFWebRazor.models;

@inject SignInManager<MyAppUser> SignInManager
@inject UserManager<MyAppUser> UserManager

<ul class="navbar-nav">
@if(SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
        Xin Chào <p>@UserManager.GetUserName(User)</p></a>
        </li>


        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Đăng Xuất</a>
        </li>




}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Register">
        Đăng Ký</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Login">Đăng Nhập</a>

    </li>

}
    </ul>